{
    "name": "leapt/api-allocine-helper",
    "description": "An easy way to use the Allocine API",
    "type": "library",
    "homepage": "https://github.com/leapt/api-allocine-helper",
    "license": "CC-BY-SA-3.0",
    "authors": [
        {
            "name": "Etienne Gauvin",
            "email": "etienne@gauvin.info"
        },
        {
            "name": "Jonathan Scheiber",
            "homepage": "https://github.com/jmsche"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "symfony/http-client": "^5.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18.3",
        "phpstan/phpstan": "^0.12.81",
        "phpunit/phpunit": "^9.5.2",
        "symfony/var-dumper": "^5.2"
    },
    "scripts": {
        "ci": [
            "@cs:dry",
            "@phpstan",
            "@test"
        ],
        "cs:dry": "php-cs-fixer fix --diff --diff-format=udiff --dry-run --no-interaction --ansi",
        "cs:fix": "php-cs-fixer fix --ansi",
        "phpstan": "vendor/bin/phpstan analyse --ansi",
        "test": "vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "Leapt\\ApiAllocineHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Leapt\\ApiAllocineHelper\\Tests\\": "tests/"
        }
    }
}
